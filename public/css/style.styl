body
  font-family Helvetica, sans-serif
  font-size 14px

#msgBox
  background-color #d1c176
  border-bottom 2px solid black
  display inline-block
  margin-bottom 10px
  max-width 100%
  width 100%

  #msg
    float left

  #search
    padding 8px
    margin 10px 20px
    float right

#cy
  background-color darkgrey
  display inline-block
  font-family helvetica, arial, sans-serif
  font-size 14px
  min-height 80vh
  min-width cyWidth
  margin 20px cySideMargin

#controls
  min-width cyWidth
  margin 10px cySideMargin
  padding 5px

.control
  margin 5px

  h4
    clear both
    display block
    text-align center
    font-family Tacoma, Helvetica, sans-serif
    font-size 1.0rem

.layoutControl
  width 65px
  height 20px
  border 1px solid blue
  color white
  font-size 12px
  background-color #52A5FF
  display inline-block
  padding 2px
  cursor pointer
  margin 5px 2.5px

