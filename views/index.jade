//-for zooming
mixin zoom
    .zoom
        button#zoomIn   +  
        button#zoomOut   -  

doctype html
html(lang="en")
  head
    title #{title}
    script(src="/js/libs/jquery.min.js")
    script(src="/js/libs/arbor.js")
    link(type="text/css",rel="stylesheet",href="/css/style.css")

  body
    #cy
    #msg Node Information
    input#search(placeholder="Search the Network",autofocus) 
    //search for a specific gene

    button#redo Re-render

    #timePoints
        //-
            for each timePoint in timePoints
            .timePoint.timeSelect(data-time="ej") Early Juvenile
            .timePoint(data-time="lj") Late Juvenile
            .timePoint(data-time="lp") Late Puberty

    mixin zoom

    #expControls
        input#expMax(placeholder="Set Max")
        input#expMin(placeholder="Set Min")
        input#midPointControl(placeholder="Set New Center Point")
    //choose the range of expression values to see

    //hide until implemented
    #expGradient

    //hide until needed
    #layoutControls
        ul
            li Save
            li Upload
            li Default Layouts

    script(src='/js/libs/async.min.js')
    script(src="/js/libs/cytoscape.min.js")
    script(src="/js/libs/underscore.min.js")
    script(src="/js/cyto.js")
    script(src="/js/model.js")
    script(src="/js/dataRequests.js")
